<div class = container>
    <div class="row">
        <div class = "col-sm-6">
      <% if logged_in? %>
      
        <%= form_for ([@iss,@comm.build]) do |f| %>
          <%= render 'shared/error_messages' %>

          <%= f.label :body, "Comment" %>
