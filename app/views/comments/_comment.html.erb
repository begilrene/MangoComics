<div class = "container">
      <div class = "row">
          <div class="col-sm-12">
            <% @comm.order(created_at: :desc).each do |comment| %>
                  <p>
                    <img src = <%=User.find(comment.user_id).profilePic%> width="80" height = "80" alt"">  <%=User.find(comment.user_id).displayName%>
                  </p>
                  <% if User.find(comment.user_id).permission.to_i == 2%>
                  <p style="color: red;">
                   Admin
                    <img class = "mx-auto rounded-circle" src=<%= asset_path '/crown_bronze.png' %>>
                    </p>
                  <%end%>
                  <% if User.find(comment.user_id).permission.to_i == 1%>
                  <p style="color: green;">
                    Editor
                    <img class = "mx-auto rounded-circle" src=<%= asset_path '/wrench_orange.png' %>>
                  </p>
                  <%end%>
            <p>  Date: <%=comment.date%>
                  
            <% if logged_in? && (@current_user.userID == comment.user_id || @current_user.permission.to_i > 0)%>
                <%= link_to "Delete", [User.find(comment.user_id), User.find(comment.user_id).UComments.find(comment.commentId)], method: :delete %>
                <%= link_to "Edit", edit_user_u_comment_path(User.find(comment.user_id), User.find(comment.user_id).UComments.find(comment.commentId)) %>

            <% end %>
            
            <br />
            </p>
            <p id = "comments"> <%=comment.body%></p>
            <% end %>
            <% Review.all.each do |rev|%>
              <%if (@user.userID == rev.user_id)%>
                  <br>
     <div class = container id = "comments" style="color:black;">
     <br>
      <img class="mx-auto" src=<%=rev.user.profilePic%> width="80" height="80" position="" alt=""></img>
      <%= rev.user.displayName %> <a href="/issues/<%=rev.issue_id%>"><img class=mx-auto src="<%=rev.issue.cover%>" width="80" height="80"></img></a> <br>
        <% if rev.user.permission.to_i > 1%>
        <p style="color:red;">
          Admin Account 
        <img class = "mx-auto rounded-circle" src=<%= asset_path '/crown_bronze.png' %>> 
        </p>
        <%end%> 
      <%=rev.created_at%> <br>
      <%=rev.body %>
     <br>
     </div>
              <%end%>
            <% end %>
          </div>
        </div>
      </div>
