<div class = "container">   
      <% if logged_in? %>
      
        <%= form_for ([@user,@user.UComments.build]) do |f| %>
          <%= render 'shared/error_messages' %>

          <%= f.label :body, "Post to Wall" %>
          <%= f.text_area :body %>
          

          <%= f.submit "Post", class: "btn btn-small btn-primary" %>
        <% end %>
      <% end %>
</div>