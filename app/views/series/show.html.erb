<% provide(:title, @ser.seriesname) %>

<%= render 'layouts/navbar' %>

<!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/heroic-features.css" rel="stylesheet">

<br>
<div class = container>
    <div class="row">
        <div class = "col-sm-4">
         <img src= "<%=@ser.picture%>" class="img-fluid" alt="Responsive image" >
        </div>
        <div class = "col-sm-8">
            <div class="shadow-lg p-4 mb-4 bg-white">
                <h1>
                    <%= @ser.seriesname %> : <br>
                </h1>
                    <p>
                    <a href="/franchise/<%= @ser.franchise.franchiseID %>" class="btn btn-primary">Franchise:<%=@ser.franchise.franchisename%></a><br><br>
                    <a href="/publisher/<%= @ser.franchise.publisher.publisherID %>" class="btn btn-primary">Publisher:<%=@ser.franchise.publisher.publisherName%></a><br><br>
                    <% @ser.volume.reorder('volumename').each do |volume| %>
                        <a href="/volumes/<%= volume.volumeID %>" class="btn btn-primary">Volume:<%=volume.volumename%></a>
                    <% end %>
                    <br><br>
                    <a href="/series/<%=@ser.seriesID%>/sreviews/" class="btn btn-primary" style="background-color:green;"> List of Reviews...</a> <br><br>
                    <% if logged_in? && (current_user.permission > 0) %>
                    <a><%= link_to "Edit",edit_series_path %></a>
                    <% end %>
                    </p>
            </div>
        </div>
    </div>
</div>
  <%= render 'ratings/sform' %>
  <%= render 'reviews/sform' %>
  <%= render 's_comments/form' %>
  <%= render 's_comments/comment' %>
</div>


</body>
<%= render 'layouts/footer'%>