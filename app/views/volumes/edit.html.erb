<%= render 'layouts/navbar' %>
<div class="container">
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="display-3">Edit Volume</h1>
    <%= form_for(@vol) do |f| %>
      <%= f.label :volumename, "Volume Title" %>
      <%= f.text_field :volumename, class: 'form-control' %>
      %= f.label :picture, "IMAGE URL (leave blank if none)" %>
      <%= f.text_field :picture, class: 'form-control' %>
      <%= f.label :series_id, "Series (if series not shown please add volume first)" %>
      <%= f.select :series_id, options_from_collection_for_select(Series.all, :seriesID, :seriesname) %>


      <%= f.submit "Edit volume", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
<footer> 
<%=render 'layouts/footer' %>
</footer>
  </body>
<html lang="en">