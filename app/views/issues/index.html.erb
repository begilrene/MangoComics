
<%= form_tag issues_path, :method => 'get', :id => "search-form" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <div id=issueName > <%= render partial: 'issues/show', collection:@show %></div>
<% end %>

<% if @Issues.blank? %>
  <h4>There are no issues containing the term <%= params[:search] %>.</h4>
<% end %>