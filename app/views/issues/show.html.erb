<!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/heroic-features.css" rel="stylesheet">

<% provide(:title, @iss.issuename) %>

<%= render 'layouts/navbar' %>
<br>
<div class = container>
    <div class="row">
        <div class = "col-sm-4">
         <img src= "<%=@iss.cover%>" class="img-fluid" alt="Responsive image" >
        </div>
        <div class = "col-sm-8">
            <div class="shadow-lg p-4 mb-4 bg-white">
                <h1>
                    <%= @iss.issuename %> : <br>
                </h1>
                    <p>
                    <b> Author: </b> <%= @iss.author %> <br>
                    <b> Artist: </b> <%= @iss.artist %> <br>
                    <b> Editor: </b> <%= @iss.editor %> <br>
                    <b> Summary: </b> <%= @iss.Summary %> <br> <br>
                    <a href="/volumes/<%= @iss.volume.volumeID %>" class="btn btn-primary">Volume: <%=@iss.volume.volumename%></a><br> <br>
                    <a href="/series/<%= @iss.volume.series.seriesID %>" class="btn btn-primary">Series: <%=@iss.volume.series.seriesname%></a><br><br>
                    <a href="/franchise/<%= @iss.volume.series.franchise.franchiseID %>" class="btn btn-primary">Franchise: <%=@iss.volume.series.franchise.franchisename%></a><br><br>
                    <a href="/publisher/<%= @iss.volume.series.franchise.publisher.publisherID %>" class="btn btn-primary">Publisher: <%=@iss.volume.series.franchise.publisher.publisherName%></a> <br><br>
                    <a href="/issues/<%=@iss.issueID%>/reviews/" class="btn btn-primary" style="background-color:green;"> List of Reviews...</a> <br><br>
                    <br>
                    <% if logged_in? && (current_user.permission.to_i > 0) %>
                    <%= link_to "Edit", edit_issue_path %>
                    <% end %>
                </p>
            </div>
        </div>
    </div>
</div>
<div class = container>
    <div class="row">
        <div class="shadow-lg p-4 mb-4 bg-white">
        <b>Synopsis: </b> <br>
        <%= @iss.synopsis%>
        </div>
    </div>
</div>

<div class = container>
    <div class = "row">
    <p>
    Characters: <%= @iss.characters %> <br>
    </p>
    </div>
</div>
<%= render 'ratings/iform' %>
<%#= render 'reviews/iform' %>
<%= render 'comments/form' %>
<%= render 'layouts/issueComments' %>
</body>
<%= render 'layouts/footer'%>